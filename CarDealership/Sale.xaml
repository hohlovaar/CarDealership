<Page x:Class="CarDealership.Sale"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarDealership"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="750"
      Title="Sale">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Редактирование продажи" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 10"/>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <TextBlock Text="Дата продажи" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 5"/>
            <TextBlock Text="Сотрудник" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 5"/>
            <TextBlock Text="Автомобиль" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 5"/>
            <TextBlock Text="Покупатель" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 5"/>
            <Button Content="Отмена" Width="150" Height="25" Background="DarkRed" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 15"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <DatePicker Width="370" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 3"/>
            <ComboBox Width="370" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 3">
                <ComboBoxItem Content="Жуков Олег Николаевич"/>
            </ComboBox>
            <ComboBox Width="370" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 3">
                <ComboBoxItem Content="BMW-X5"/>
            </ComboBox>
            <ComboBox Width="370" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 3">
                <ComboBoxItem Content="Свиридова Алла Федоровна"/>
            </ComboBox>
            <Button Content="Сохранить" Width="370" Height="25" Background="DarkRed" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 5"/>
        </StackPanel>
    </Grid>
</Page>
